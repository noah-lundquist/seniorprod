@page
@model Seniorprod.Pages.Login.LoginModel
@{
}

<div class="container border" style="passing:20px">

    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Credential.UserName"></label>

            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.UserName" />

            </div>


        </div>
        <span class="text-danger" asp-validation-for="Credential.UserName"></span>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Credential.Password"></label>

            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" />

            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
            <div class="form-group row">
                <div class=" col-2">
                    <input type="submit" class="btn btn-primary" value="Login" onclick="window.location('\admin')" />
                </div>
                


        </div>

    </form>

</div>